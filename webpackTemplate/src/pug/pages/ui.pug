extends ~@templates/main-template
include ~@mixins/mainButton
include ~@mixins/inTextLink
include ~@mixins/breadCrumbs
include ~@mixins/zoomImageIcon
include ~@mixins/squareCloseButton
include ~@mixins/medicamentCard

block vars
  - title = 'ui страница'
  -
    var breadCrumbsItems = [
      {text: 'Статья', link: './'},
      {text: 'Подробнее', link: ''},
    ]
    var cards = [
      {title: "Витамин D3 2000 ME", link: "#", icons: ["./images/medicamentCardIcons/image1.png", "./images/medicamentCardIcons/image2.png"], pharmacy: "Импловит", description: "Дополнительный источник витамина D3."}
    ]

block content
  section.ui
    h1 Страница ui-компонентов
    br
    +mainButton('', 'Текст кнопки', false)
    br
    +mainButton('main-button--lighter', 'Текст кнопки', false)
    br
    +mainButton('main-button--pink', 'Текст кнопки', false)
    br
    +inTextLink('', 'Текст ссылки', false)
    br
    +inTextLink('intext-link--white', 'Текст ссылки', false)
    br
    +breadCrumbs(breadCrumbsItems)
    br
    +zoomImageIcon('my-icon')
    br
    +squareCloseButton('')
    br
    +medicamentCard('my-card', cards[0])